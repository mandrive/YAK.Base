@model Yak.Web.Models.QuestionForm

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Question</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row-fluid">
        <div class="col-md-12">
            <div class="row-fluid">
                <div class="row-fluid">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="col-md-6">
                        <div class="wmd-panel">
                            <div id="wmd-button-bar"></div>
                            @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "wmd-input" } })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Tags, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="col-md-2">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Stack")
</div>

<script type="text/javascript" src="@Url.Content("/Scripts/Markdown/Markdown.Converter.js")"></script>
<script type="text/javascript" src="@Url.Content("/Scripts/Markdown/Markdown.Editor.js")"></script>
<script type="text/javascript" src="@Url.Content("/Scripts/Markdown/Markdown.Sanitizer.js")"></script>
<script type="text/javascript" src="@Url.Content("/Scripts/Question/NewQuestion.js")"></script>
